<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the background color for the shape -->
    <solid android:color="#bdc3c7" />

    <!-- Define the corner radius for the shape -->
    <corners android:radius="8dp" />

    <!-- Define the shadow for the shape -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />

    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#D3D3D3" />
        </shape>
    </item>

    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

</shape>

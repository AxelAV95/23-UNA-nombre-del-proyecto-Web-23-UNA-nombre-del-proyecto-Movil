<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.activities.MenuEmpleadoActivity">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_main_empleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rowCount="4"
        app:columnCount="2"

        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardv_productos_emp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#3d406b"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >

                <com.airbnb.lottie.LottieAnimationView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:lottie_rawRes="@raw/producto"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_productos"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="23sp"
                    android:fontFamily="@font/dosis"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardv_categorias_emp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="0"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#3d406b"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >


                <com.airbnb.lottie.LottieAnimationView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:lottie_rawRes="@raw/categorias"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_categorias"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="23sp"
                    android:fontFamily="@font/dosis"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardv_proveedores_emp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#3d406b"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >

                <com.airbnb.lottie.LottieAnimationView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:lottie_rawRes="@raw/proveedor"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_proveedor"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="23sp"
                    android:fontFamily="@font/dosis"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/cardv_reportes_emp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="2"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#3d406b"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >

                <com.airbnb.lottie.LottieAnimationView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:lottie_rawRes="@raw/reporte"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_reportes"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="23sp"
                    android:fontFamily="@font/dosis"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardv_clientes_emp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="3"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#3d406b"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >

                <com.airbnb.lottie.LottieAnimationView

                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:lottie_rawRes="@raw/clientes"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_clientes"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="23sp"
                    android:fontFamily="@font/dosis"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.gridlayout.widget.GridLayout>

    <com.michaldrabik.tapbarmenulib.TapBarMenu
        android:id="@+id/tapBarMenu_emp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_main_empleado"
        app:tbm_backgroundColor="#3d406b"
        android:layout_alignParentBottom="true"
        app:tbm_buttonPosition="right"
        android:layout_marginTop="180dp"
        app:tbm_buttonMarginRight="20dp"
        app:tbm_buttonSize="70dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="end|top"
        app:tbm_menuAnchor="bottom"
        >

        <ImageView
            android:id="@+id/icon_cuenta_emp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/cuenta"
            android:contentDescription="@string/content_cuenta"
            />



        <ImageView
            android:id="@+id/icon_logout_emp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/logout"
            android:contentDescription="@string/content_cerrar_sesion"

            />
        <Space
            android:layout_width="56dp"
            android:layout_height="match_parent"
            />

    </com.michaldrabik.tapbarmenulib.TapBarMenu>

</RelativeLayout>